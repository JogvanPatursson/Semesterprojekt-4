<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="receiveTextBox" HorizontalAlignment="Left" Height="66" Margin="171,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="sendTextBox" HorizontalAlignment="Left" Height="23" Margin="171,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="sendButton" Content="Click here to send message to server" HorizontalAlignment="Left" Margin="261,274,0,0" VerticalAlignment="Top" Width="Auto" Click="sendButton_Click"/>

    </Grid>
</Window>
