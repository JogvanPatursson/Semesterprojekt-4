<UserControl x:Class="MartUI.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200"
             Background="#2f3136">
    <StackPanel VerticalAlignment="Bottom">
        <Button Width="185" Height="24" Margin="0,20"
                Content="Change password"
                Style="{StaticResource RoundCornerButton}"
                Command="{Binding ChangePassword}" 
                VerticalAlignment="Bottom"/>
        <Button Width="185" Height="24"
                Style="{StaticResource RoundCornerButton}"
                Foreground="Red"
                Content="Delete profile"
                Command="{Binding DeleteProfile}" 
                VerticalAlignment="Bottom"/>
        <Button Width="185" Height="24" Margin="0,20"
                Style="{StaticResource RoundCornerButton}"
                Content="Logout"
                Command="{Binding LogoutCommand}" 
                VerticalAlignment="Bottom"/>
    </StackPanel>
</UserControl>
